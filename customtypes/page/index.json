{
  "id": "page",
  "label": "Page",
  "format": "page",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": { "label": "UID", "placeholder": "URL slug for the page" }
      },
      "title": {
        "type": "StructuredText",
        "config": {
          "label": "Title",
          "placeholder": "Title for the page",
          "allowTargetBlank": false,
          "single": "heading1"
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "hero": { "type": "SharedSlice" },
            "image": { "type": "SharedSlice" },
            "text_with_features": { "type": "SharedSlice" },
            "text_with_image": { "type": "SharedSlice" },
            "realizace": { "type": "SharedSlice" },
            "reference": { "type": "SharedSlice" },
            "procedure": { "type": "SharedSlice" },
            "text_with_images": { "type": "SharedSlice" }
          }
        }
      }
    },
    "SEO & Metadata": {
      "meta_description": {
        "type": "StructuredText",
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page",
          "allowTargetBlank": true,
          "multi": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
        }
      },
      "meta_title": {
        "type": "Text",
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        }
      }
    }
  }
}
